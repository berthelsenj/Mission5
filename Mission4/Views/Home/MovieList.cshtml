@{
    ViewData["Title"] = "Movie List";
}

@model List<ApplicationResponse>

<h1>The Joel Hilton Film Collection</h1>


<table class="table table-bordered table-striped" style=" background-color: white; opacity: 0.8;">

    <thead class="font-weight-bold">
        <tr>
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent To</td>
            <td>Notes</td>
        </tr>
    </thead>

    <tbody>
        @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Category.CategoryName</td>
                    <td>@x.Title</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating</td>
                    <td>@x.Edited</td>
                    <td>@x.LentTo</td>
                    <td>@x.Notes</td>

                    <td style="background-color: #3983A8; "><a asp-controller="Home" asp-action="Edit" asp-route-movieid="@x.MovieId" style="color: white; ">Edit</a></td>
                    <td style="background-color: #E63E33; "><a asp-controller="Home" asp-action="Delete" asp-route-movieid="@x.MovieId" style="color:white; ">Delete</a></td>
                </tr>
            }
    </tbody>

</table>